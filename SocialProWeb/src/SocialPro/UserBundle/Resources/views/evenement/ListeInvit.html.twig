        <!-- Testimonial Section -->
        <div class="text-center">
            <h3 class="border-success"><span class="heading_border bg-success">Les Invitations</span></h3>
        </div>
        {% for invitation in invitations %}
            <div class="col-md-4">
                <div class="author">

                    <p class="text-right">
