                         <a href="{{ path('acceptInvit', {'id':invitation.idInvitation}) }}" ><input type="button"  name="participer "value="participer" class="btn btn-responsive button-alignment btn-success" /></a>
                        <a href="{{ path('refusetInvit', {'id':invitation.idInvitation}) }}" ><input type="button"  name="refuser "value="refuser" class="btn btn-responsive button-alignment btn-primary" /></a>

                        <br>
                        <br>
                        <br>
                    </p>
                </div>

            </div>

