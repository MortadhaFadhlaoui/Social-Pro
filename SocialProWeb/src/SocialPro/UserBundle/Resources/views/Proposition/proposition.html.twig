{% extends "@SocialProUser/master.html.twig" %}

{% block  content %}

    <!-- CSS -->

    <!-- Main content -->
    <section class="content paddingleft_right15">
        <div class="row">
            <div class="panel panel-primary ">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <i class="livicon" data-name="user" data-size="16" data-loop="true" data-c="#fff" data-hc="white"></i>
                        Proposition List
                    </h4>


                </div>
                <br />

                <div class="panel-body">
                    <a class="btn btn-info btn-large" data-toggle="modal" data-href="#responsive" href="#responsive">
                        <i class="livicon" data-name="user-add" data-size="18" data-c="blue" data-hc="red" data-loop="true"></i>
                        <span>New proposition</span>
                    </a>
                    <div class="panel-body" id="exportTable" style="display: none;">
                        <div class="row">


                            <div class="col-md-2">
                                <div class="list-group border-bottom">

                                    <a href="#" class="list-group-item" onClick ="$('#customers').tableExport({type:'pdf',escape:'false'});"><img src='{{ asset('img/icons/pdf.png') }}' width="24"/> PDF</a>

                                </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="list-group border-bottom">
                                        <a href="#" class="list-group-item" onClick ="$('#customers').tableExport({type:'txt',escape:'false'});"><img src='{{ asset('img/icons/txt.png') }}' width="24"/> TXT</a>
                                    </div>
                                </div>

                            </div>


                        </div>
                    </div>
                    <br/><br/>

                    <table id="customers" class="table datatable" border="1">
                        <thead>
                        <tr class="filters">
                            <th>titre</th>
                            <th>sujet</th>
                            <th>Pour</th>
                            <th>Contre</th>
                            <th>Vote Pour</th>
                            <th>Vote Contre</th>
                            <th>Commenter</th>
                            <th>Supprimer</th>
                        </tr>
                        </thead>
                        {% set i = 0 %}

                        {% for prop in props %}
                            {% set vt = 0 %}
                            <tbody>
                            <tr>
                                <td>{{ prop.titre }}</td>
                                <td>{{ prop.sujet }}</td>
                                <td>{% if vp[i] == 0 %}
                                        0
                                        {% else %}

                                                {{ vp[i]| length }}

                                    {% endif %}

                                </td>
                                <td>
                                    {% if vc[i] == 0 %}
                                        0
                                    {% else %}

                                        {{ vc[i]| length }}

                                    {% endif %}
                                </td>
                                <td>
                             {% for p in vp[i] %}
                                 {% if p.idMembre == user.id %}
                                     {% set vt = 1 %}
                                 {% endif %}
                             {% endfor %}
                             {% for c in vc[i] %}
                                 {% if c.idMembre == user.id %}
                                      {% set vt = 1 %}
                                 {% endif %}
                             {% endfor %}
                                     {% if vt == 0 %}
                                    <button class="btn btn-responsive button-alignment btn-info" ><a href="{{ path('votePourr',{'id':prop.idProposition}) }}">vote</a></button>
                                     {% endif %}
                                </td>
                                <td>
                                {% if vt == 0 %}
                                    <button class="btn btn-responsive button-alignment btn-danger" ><a href="{{ path('voteContree',{'id':prop.idProposition}) }}">vote</a></button>
                                 {% endif %}
                                </td>
                                <td>
                                    <a class="btn btn-success btn-large" href="{{ path('CommentPropositionnn',{'id':prop.idProposition}) }}">
                                        <i class="livicon" data-name="comment" data-size="18" data-c="blue" data-hc="red" data-loop="true"></i>
                                        <span>comment</span>
                                    </a>
                                </td>
                                <td>
                                    <a href="{{ path('DeletePropositionnn',{'id':prop.idProposition}) }}">
                                        <i class="livicon" data-name="user-remove" data-size="18" data-loop="true" data-c="#f56954" data-hc="#f56954" title="delete user"></i>
                                    </a>
                                </td>
                            </tr>
                            </tbody>
                            <!-- Modal for showing delete confirmation -->
                            <div class="modal fade" id="delete_confirm" tabindex="-1" role="dialog" aria-labelledby="user_delete_confirm_title" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                            <h4 class="modal-title" id="user_delete_confirm_title">
                                                Delete User
                                            </h4>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure to delete this user? This operation is irreversible.
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                            <a href="#" type="button" class="btn btn-danger">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% set i = i+1 %}
                        {% endfor %}
                    </table>
                </div>
            </div>

        </div>
        <div class="modal fade in" id="responsive" tabindex="-1" role="dialog" aria-hidden="false" style="display:none;">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <form method="post" action="{{ path('addPropositionn') }}">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title">New Proposition</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">


                                <p>
                                   Titre : <input id="name" name="titre" type="text" placeholder="titre" class="form-control">
                                </p>
                                <p>
                                   Sujet :<input id="name1" name="sujet" type="text" placeholder="sujet" class="form-control">
                                </p>

                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-dismiss="modal" class="btn">Close</button>
                        <button type=submit" class="btn btn-primary">add</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>


        <!-- row--> </section>
{% endblock %}