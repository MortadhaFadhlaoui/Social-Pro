{% extends "SocialProUserBundle::master.html.twig" %}
{% block  content %}
    <div class="text-center">
        <h3 class="border-danger"><span class="heading_border bg-danger">Tache</span></h3>
    </div>
    <div class="col-sm-6 col-md-6">
        <div class="box">
            <div class="box-icon">
                <i class="livicon icon1" data-name="desktop" data-size="55" data-loop="true" data-c="#01bc8c" data-hc="#01bc8c"></i>
            </div>

                <table>
                    <tbody>
                    <tr>
                        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<font color="#40A497" SIZE="4">Id Tache :&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</font></td>
                        <td>{{ tache.idTache }}</td>
                    </tr>
                    <tr>
                        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<font color="#40A497" SIZE="4">Nom :&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</font></td>
                        <td>{{ tache.nom }}</td>
                    </tr>
                    <tr>
                        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<font color="#40A497" SIZE="4">Description  :&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</font></td>
                        <td>{{ tache.description }}</td>
                    </tr>
                    <tr>
                        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<font color="#40A497" SIZE="4">Complexite :&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</font></td>
                        <td>{{ tache.complexite }}</td>
                    </tr>
                    </tbody>
                </table>

                <div>


            </div>
        </div>
    </div>


    <ul>

        <br>
        </br>
        <br>
        </br>

        <div class="col-md-6">
            {{ form_start(delete_form) }}
            <td>

                <a href="" class="tooltip-test" data-placement="top" title="" data-original-title="Supprimer"  data-toggle="modal" data-target="#deleteModal{{ tache.idTache }}"><button type="button" class="btn btn-outline btn-danger">Supprimer</button></a>
                <div class="modal fade" id="deleteModal{{ tache.idTache }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title">Comfirmation de suppression :</h4>
                            </div>
                            <div class="modal-body" >
                                <p><span>Voulez-vous vraiment supprimer <a href="#">{{ tache.nom }}</a> ? </span></p>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default " data-dismiss="modal">Annuler</button>
                                <input type="submit" value="Supprimer"  href="{{ path('tache_index') }}" class="btn btn-responsive button-alignment btn-danger">
                            </div>
                        </div>
                    </div>
                </div>




            </td>
            {{ form_end(delete_form) }}
            <br>
            </br>


            <a href="{{ path('tache_edit', { 'idTache': tache.idTache }) }}"><button type="button" class="btn btn-responsive button-alignment btn-success" >Modifier</button></a>
            &nbsp;


            <a href="{{ path('tache_index') }}"><button type="button" class="btn btn-responsive button-alignment btn-success" >Retour</button></a>

        </div>
    </ul>
{% endblock %}
